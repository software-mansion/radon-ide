{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build:webview",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"watch"
			]
		},
		{
			"label": "watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
