{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist/tests",
    "lib": ["es6", "dom", "ESNext"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "jsonc-parser": ["./node_modules/jsonc-parser/lib/esm/main.js"]
    }
  },
  "include": ["src/**/*.test.ts", "lib/**/*.test.ts", "lib/**/*.ts"],
  "exclude": ["lib/**/*.js"]
}
