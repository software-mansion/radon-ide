{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom", "ESNext"],
    "sourceMap": true,
    "rootDirs": ["src", "../vscode-js-debug"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
  },
  "exclude": [
    "node_modules/**/*",
    "lib/**/*",
    "out/**/*",
    "dist/**/*",
    ".vscode-test",
    "webpack.config.js",
    ".vscode-test",
    "vite.config.js"
  ]
}
