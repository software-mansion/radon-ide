{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom", "ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "jsonc-parser": ["./node_modules/jsonc-parser/lib/esm/main.js"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    "lib/**/*",
    "scripts/**/*",
    "out/**/*",
    "dist/**/*",
    ".vscode-test",
    "webpack.config.js",
    ".vscode-test",
    "vite.config.js",
    "plugins_dist/**/*",
    "third-party/**/*",
    "eslint.config.mjs"
  ]
}
