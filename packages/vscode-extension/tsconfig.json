    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom", "ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
